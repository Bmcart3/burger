<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000" pause="false">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-50 mx-auto" src="./assets/burger1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="./assets/burger2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="./assets/burger3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="text-left">To devour, or not to devour...</h3>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h3 class="text-right">Devoured!</h3>

            <ul class="text-right">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <h2>Add your own creation!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu"></label>
                    <input type="text" id="bu" name="name">
                    <button type="submit">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>